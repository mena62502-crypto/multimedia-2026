def calculate_factorial():
    # Ask the user to enter a positive integer
    n = int(input("Enter a positive integer: "))

    # Check if the number is positive
    if n < 0:
        print("Please enter a positive number.")
        return  # Stop the function if the number is negative

    # Initialize the result variable with 1
    result = 1

    # Use a for loop to multiply numbers from 1 up to n
    for i in range(1, n + 1):
        result *= i  # Multiply the current number with the result

    # Print the final factorial result
    print(f"The factorial of {n} is {result}")
