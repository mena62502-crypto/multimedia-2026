def remove_from_list():
    # Define a list with four string items
    my_list = ['Apple', 'Banana', 'Cherry', 'Data']
    
    # Print the current list before removal
    print("Current list:", my_list)

    # Ask the user to enter the item they want to remove
    item = input("Enter the item you want to remove: ")

    # Check if the entered item exists in the list
    if item in my_list:
        # If found, remove the item
        my_list.remove(item)
        # Print a success message
        print(f"'{item}' has been removed successfully.")
    else:
        # If not found, print an error message
        print(f"'{item}' was not found in the list.")

    # Print the updated list after removal attempt
    print("Updated list:", my_list)
